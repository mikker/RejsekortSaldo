<% if credentials %>  <section id='circle'>    <div class='cloak'>      <p>Ifølge rejsekort.dk har du</p>      <h1><span id='balance'></span> kr</h1>      <p>på dit Rejsekort</p>    </div>  </section><% else %>  <section id='sign_in'>    <form action="/credentials" method="POST">      <input type="text" name="credentials[username]" placeholder="Brugernavn">      <input type="password" name="credentials[password]" placeholder="Password">      <button type="submit">Log ind og gem</button>    </form>  </section><% end %>